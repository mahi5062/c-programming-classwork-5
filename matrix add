#include <stdio.h>

int main() {
    int matrix[3][3] = {{1, 2, 3},
                       {4, 5, 6},
                       {7, 8, 9}};
   int i,j,avg,sum = 0,rows=3,cols=3;
    for(i = 0; i < rows; i++) 
	{
        for(j = 0; j < cols; j++) 
		{
            sum =sum+matrix[i][j];
        }
    }
    average = sum / (rows * cols);

    printf("Sum of matrix elements: %d\n", sum);
    printf("Average of matrix elements: %f\n", average);

    return 0;
}
